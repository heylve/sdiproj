
{% extends 'base.html.twig' %}
{% block title  ' *gérer les Projets SDI ' %}

{% block body %}

<div class="container mt-4" >
<h1>  Gérer les projets SDI</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Titre du projet</th>
                <th>Actions </th>
            </tr>
        </thead>
        <tbody>
            {% for project in projects %}
            <tr>
                <td>{{project.title}}</td>
                <td>
                    <a href="{{path ('admin.project.edit',{id: project.id}) }}" class="btn btn-warning" >Editer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
         
    </table>
</div>
{% endblock body %}